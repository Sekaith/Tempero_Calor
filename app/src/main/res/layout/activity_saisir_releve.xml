<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <LinearLayout
            android:layout_width="417dp"
            android:layout_height="502dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titre_saisie"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titre_saisie"
                android:textStyle="bold"
                android:translationX="160dp" />

            <TextView
                android:id="@+id/DateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choisir une date"
                android:translationX="160dp" />

            <CalendarView
                android:id="@+id/calendrierSaisie"
                android:layout_width="match_parent"
                android:layout_height="296dp" />

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:translationY="20dp">

                <RadioButton
                    android:id="@+id/radioButton_heure_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/heure_6" />

                <RadioButton
                    android:id="@+id/radioButton_heure_12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/heure_12"
                    android:translationX="75dp" />

                <RadioButton
                    android:id="@+id/radioButton_heure_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/heure_18"
                    android:translationX="140dp" />

                <RadioButton
                    android:id="@+id/radioButton_heure_00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/heure_00"
                    android:translationX="180dp" />
            </RadioGroup>

            <Spinner
                android:id="@+id/nomLacSpinner"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:translationY="40dp" />

            <EditText
                android:id="@+id/editTextReleveTemp"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:ems="10"
                android:hint="Exemple"
                android:inputType="textPersonName"
                android:text="Exemple"
                android:translationY="40dp"
                tools:text="Exemple" />

        </LinearLayout>

        <Button
            android:id="@+id/buttonEnregistrer"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="@string/btnenreg" />

        <Button
            android:id="@+id/buttonRetour"
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:text="@string/btnretour" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
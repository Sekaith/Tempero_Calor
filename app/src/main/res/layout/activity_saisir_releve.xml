<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="106dp"
        android:layout_height="174dp"
        app:srcCompat="@drawable/logotemperocalor"
        tools:layout_editor_absoluteX="152dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="417dp"
        android:layout_height="557dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-6dp"
        tools:layout_editor_absoluteY="174dp">

        <TextView
            android:id="@+id/titre_saisie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/titre_saisie"
            android:translationX="160" />

        <CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:translationY="20">

            <RadioButton
                android:id="@+id/radioButton_heure_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heure_6" />

            <RadioButton
                android:id="@+id/radioButton_heure_12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heure_12"
                android:translationX="75" />

            <RadioButton
                android:id="@+id/radioButton_heure_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heure_18"
                android:translationX="140" />

            <RadioButton
                android:id="@+id/radioButton_heure_00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/heure_00"
                android:translationX="180" />
        </RadioGroup>

        <Spinner
            android:id="@+id/nomLacSpinner"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:translationY="50" />

        <EditText
            android:id="@+id/editTextTextPersonName2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Exemple"
            android:inputType="textPersonName"
            android:text="Exemple"
            android:translationY="70"
            tools:text="Exemple" />

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="229dp"
            android:translationY="100" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
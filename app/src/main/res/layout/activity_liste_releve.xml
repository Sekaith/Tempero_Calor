<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    //Test_Push
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="visible"
        tools:visibility="visible">

        <ImageView
            android:id="@+id/LogoTemperoListe"
            android:layout_width="106dp"
            android:layout_height="174dp"
            android:layout_gravity="center"
            android:contentDescription="Erreur_Affichage"
            android:visibility="visible"
            app:srcCompat="@drawable/logotemperocalor"
            tools:visibility="visible" />

        <LinearLayout
            android:layout_width="412dp"
            android:layout_height="575dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/titre_Liste"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titre_liste"
                android:translationX="160dp" />

            <TextView
                android:id="@+id/textDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Choisir une date" />

            <CalendarView
                android:id="@+id/calendrierListe"
                android:layout_width="match_parent"
                android:layout_height="255dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:orientation="horizontal">

                <Spinner
                    android:id="@+id/nomLacSpinnerListe"
                    android:layout_width="212dp"
                    android:layout_height="56dp"
                    android:spinnerMode="dropdown" />

                <Spinner
                    android:id="@+id/unitÃ©Spinner"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:entries="@array/spinnerItems"
                    android:spinnerMode="dropdown" />
            </LinearLayout>

            <TextView
                android:id="@+id/temp6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Temperature 6h" />

            <TextView
                android:id="@+id/temp12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Temperature 12h" />

            <TextView
                android:id="@+id/temp18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Temperature 18h" />

            <TextView
                android:id="@+id/temp00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Temperature 00h" />

            <Button
                android:id="@+id/buttonValider2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Valider" />

            <Button
                android:id="@+id/buttonRetour2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/btnretour" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>